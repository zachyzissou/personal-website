---
import Layout from '../layouts/Layout.astro';
import Timeline from '../components/Timeline';
import ProjectShowcase from '../components/ProjectShowcase';
import ContainerShowcase from '../components/ContainerShowcase';
import EasterEgg from '../components/EasterEgg';
import AnimatedStats from '../components/AnimatedStats';
import HamburgerMenu from '../components/HamburgerMenu';
import InteractiveTools from '../components/InteractiveTools';
---

<Layout title="Zach Gonser - Tech Wizard & Homelab Architect">
  <style>
    /* Removed blocking @import - fonts now loaded in <head> with display=swap */

    :root {
      /* DESIGN SYSTEM COLORS */
      --bg-primary: #0a0a0a;
      --bg-secondary: #111111;
      --bg-tertiary: #1a1a1a;
      --text-primary: #ffffff;
      --text-secondary: #d1d5db;
      --text-muted: #9ca3af;
      --accent-primary: #a855f7;
      --accent-secondary: #06b6d4;
      --accent-tertiary: #10b981;
      --border-color: #27272a;
      --glow: rgba(139, 92, 246, 0.3);
      
      /* DESIGN SYSTEM SPACING (8px base scale) */
      --space-xs: 0.5rem;    /* 8px */
      --space-sm: 1rem;      /* 16px */
      --space-md: 1.5rem;    /* 24px */
      --space-lg: 2rem;      /* 32px */
      --space-xl: 3rem;      /* 48px */
      --space-2xl: 4rem;     /* 64px */
      --space-3xl: 6rem;     /* 96px */
      --space-4xl: 8rem;     /* 128px */
      
      /* DESIGN SYSTEM LAYOUT */
      --max-width-content: 70rem;     /* 1120px - main content */
      --max-width-text: 48rem;        /* 768px - readable text */
      --max-width-narrow: 32rem;      /* 512px - narrow content */
      
      /* DESIGN SYSTEM TYPOGRAPHY SCALE */
      --text-xs: 0.75rem;     /* 12px */
      --text-sm: 0.875rem;    /* 14px */
      --text-base: 1rem;      /* 16px */
      --text-lg: 1.125rem;    /* 18px */
      --text-xl: 1.25rem;     /* 20px */
      --text-2xl: 1.5rem;     /* 24px */
      --text-3xl: 1.875rem;   /* 30px */
      --text-4xl: 2.25rem;    /* 36px */
      --text-5xl: 3rem;       /* 48px */
      --text-6xl: 3.75rem;    /* 60px */
      
      /* DESIGN SYSTEM BORDER RADIUS */
      --radius-sm: 0.5rem;    /* 8px - small radius */
      --radius-md: 0.75rem;   /* 12px - medium radius */
      --radius-lg: 1rem;      /* 16px - large radius */
      --radius-xl: 1.5rem;    /* 24px - extra large radius */
      --radius-2xl: 2rem;     /* 32px - button/card radius */
      --radius-full: 50%;     /* circular */
      
      /* OPTIMIZED ANIMATED BACKGROUND SYSTEM */
      --bg-animated: linear-gradient(-45deg, 
        rgba(168, 85, 247, 0.025) 0%, 
        rgba(6, 182, 212, 0.015) 25%, 
        rgba(16, 185, 129, 0.01) 50%, 
        rgba(168, 85, 247, 0.015) 75%, 
        rgba(6, 182, 212, 0.025) 100%
      );
      
      /* Enhanced visual effects */
      --focus-ring: 0 0 0 3px rgba(168, 85, 247, 0.5);
      --premium-glow: 0 0 40px rgba(168, 85, 247, 0.15), 0 0 80px rgba(6, 182, 212, 0.1);
      --premium-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 0 100px rgba(168, 85, 247, 0.1);
      --glass-bg: rgba(255, 255, 255, 0.05);
      --glass-border: rgba(255, 255, 255, 0.1);
      --shimmer-gradient: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    }

    /* Enhanced focus styles for accessibility */
    *:focus {
      outline: 2px solid var(--accent-primary);
      outline-offset: 2px;
    }
    
    *:focus:not(:focus-visible) {
      outline: none;
    }
    
    *:focus-visible {
      outline: 2px solid var(--accent-primary);
      outline-offset: 2px;
      box-shadow: var(--focus-ring);
    }

    /* Skip Links for Accessibility */
    .skip-links {
      position: absolute;
      top: -40px;
      left: 0;
      z-index: 10000;
    }
    
    .skip-link {
      position: absolute;
      left: -10000px;
      top: auto;
      width: 1px;
      height: 1px;
      overflow: hidden;
      background: var(--accent-primary);
      color: white;
      padding: 8px 16px;
      text-decoration: none;
      font-weight: 600;
      border-radius: 0 0 4px 4px;
      transition: all 0.3s ease;
    }
    
    .skip-link:focus {
      position: static;
      width: auto;
      height: auto;
      left: 6px;
      top: 6px;
      z-index: 10001;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      margin: 0;
      padding: 0;
      line-height: 1.6;
      overflow-x: hidden;
      position: relative;
      font-display: swap;
    }

    /* Optimized Animated Background Layer */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: var(--bg-animated);
      background-size: 200% 200%;
      animation: gradientFlow 20s ease-in-out infinite;
      z-index: -1;
      opacity: 1;
      will-change: background-position;
      transform: translateZ(0); /* Hardware acceleration */
    }

    h1, h2, h3, h4, h5, h6 {
      font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      font-weight: 700;
      font-display: swap;
    }

    .gradient-text {
      background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary), var(--accent-tertiary), var(--accent-primary));
      background-size: 300% 300%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: gradientShift 6s ease-in-out infinite;
      position: relative;
    }
    
    .gradient-text::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--shimmer-gradient);
      animation: shimmer 3s infinite;
      pointer-events: none;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(200%); }
    }

    @keyframes gradientFlow {
      0% {
        background-position: 0% 50%;
      }
      25% {
        background-position: 50% 0%;
      }
      50% {
        background-position: 100% 50%;
      }
      75% {
        background-position: 50% 100%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    /* Fallback for reduced motion preferences */
    @media (prefers-reduced-motion: reduce) {
      body::before {
        animation: none;
        background-position: 50% 50%;
      }
    }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      padding: 2rem;
    }

    .hero-bg {
      position: absolute;
      inset: 0;
      background: transparent;
      animation: heroGlow 8s ease-in-out infinite;
    }

    @keyframes heroGlow {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.8; }
    }

    .hero-content {
      position: relative;
      z-index: 10;
      text-align: center;
      max-width: var(--max-width-content);
      margin: 0 auto;
    }

    .hero h1 {
      font-size: clamp(var(--text-5xl), 8vw, 6rem);
      font-weight: 900;
      margin-bottom: var(--space-md);
      line-height: 1.1;
    }

    .hero-subtitle {
      font-size: clamp(var(--text-lg), 3vw, var(--text-2xl));
      color: var(--text-secondary);
      margin-bottom: var(--space-lg);
    }

    .hero-description {
      font-size: clamp(var(--text-base), 2vw, var(--text-xl));
      color: var(--text-muted);
      margin-bottom: var(--space-xl);
      max-width: var(--max-width-text);
      margin-left: auto;
      margin-right: auto;
      line-height: 1.7;
    }

    .hero-buttons {
      display: flex;
      flex-direction: column;
      gap: var(--space-sm);
      justify-content: center;
      align-items: center;
    }

    @media (min-width: 640px) {
      .hero-buttons {
        flex-direction: row;
        gap: var(--space-md);
      }
    }

    .btn {
      padding: var(--space-sm) var(--space-lg);
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: var(--text-lg);
      text-decoration: none;
      transition: all 0.3s ease;
      border: 2px solid transparent;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      position: relative;
      min-height: 48px;
    }

    .btn:focus-visible {
      outline: none;
      box-shadow: var(--focus-ring);
    }

    .btn:focus:not(:focus-visible) {
      outline: none;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent-primary), #9333ea);
      color: white;
      box-shadow: var(--premium-shadow);
      border: 1px solid rgba(168, 85, 247, 0.3);
      backdrop-filter: blur(10px);
      overflow: hidden;
    }

    .btn-primary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--shimmer-gradient);
      transition: left 0.6s ease;
    }

    .btn-primary:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: var(--premium-glow), var(--premium-shadow);
      border-color: rgba(168, 85, 247, 0.6);
    }

    .btn-primary:hover::before {
      left: 100%;
    }

    .btn-secondary {
      border: 1px solid var(--accent-secondary);
      color: var(--accent-secondary);
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      box-shadow: 0 8px 32px rgba(6, 182, 212, 0.1);
      overflow: hidden;
    }

    .btn-secondary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(6, 182, 212, 0.1), transparent);
      transition: left 0.6s ease;
    }

    .btn-secondary:hover {
      background: linear-gradient(135deg, var(--accent-secondary), #0891b2);
      color: white;
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 0 30px rgba(6, 182, 212, 0.4), 0 15px 35px rgba(6, 182, 212, 0.1);
      border-color: var(--accent-secondary);
    }

    .btn-secondary:hover::before {
      left: 100%;
    }

    .section {
      padding: var(--space-4xl) var(--space-md);
    }

    .container {
      max-width: var(--max-width-content);
      margin: 0 auto;
      padding: 0 var(--space-md);
    }

    .section-title {
      font-size: clamp(var(--text-4xl), 5vw, var(--text-5xl));
      text-align: center;
      margin-bottom: var(--space-2xl);
      text-shadow: 0 0 30px rgba(168, 85, 247, 0.3);
    }

    /* All Sections - Remove individual backgrounds */
    .journey,
    .homelab,
    .about,
    .contact {
      background: transparent;
      position: relative;
    }

    .timeline {
      position: relative;
      max-width: var(--max-width-narrow);
      margin: 0 auto;
    }

    .timeline::before {
      content: '';
      position: absolute;
      left: 50%;
      top: 0;
      bottom: 0;
      width: 2px;
      background: var(--accent-primary);
      transform: translateX(-50%);
    }

    .timeline-item {
      position: relative;
      margin-bottom: var(--space-2xl);
      padding: 0 var(--space-lg);
    }

    .timeline-item:nth-child(even) .timeline-card {
      margin-left: 50%;
      padding-left: var(--space-lg);
    }

    .timeline-item:nth-child(odd) .timeline-card {
      margin-right: 50%;
      padding-right: var(--space-lg);
    }

    .timeline-dot {
      position: absolute;
      left: 50%;
      top: 1rem;
      width: 1rem;
      height: 1rem;
      background: var(--accent-primary);
      border: 3px solid var(--bg-primary);
      border-radius: var(--radius-full);
      transform: translateX(-50%);
      z-index: 10;
    }

    .timeline-card {
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius-md);
      padding: var(--space-md);
      transition: all 0.3s ease;
    }

    .timeline-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .job-title {
      font-size: var(--text-xl);
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: var(--space-xs);
    }

    .job-company {
      font-size: var(--text-lg);
      color: var(--accent-secondary);
      font-weight: 600;
      margin-bottom: var(--space-sm);
    }

    .job-dates {
      display: inline-block;
      background: var(--accent-primary);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-lg);
      font-size: var(--text-sm);
      font-weight: 500;
      margin-bottom: var(--space-sm);
    }

    .job-summary {
      color: var(--text-secondary);
      line-height: 1.6;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-lg);
      margin-bottom: var(--space-xl);
      align-items: stretch; /* Ensure all cards have equal height */
    }

    .service-card {
      background: var(--glass-bg);
      backdrop-filter: blur(15px);
      border: 1px solid var(--glass-border);
      border-radius: var(--radius-lg);
      padding: var(--space-md);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      height: 100%; /* Use full available height */
    }

    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--shimmer-gradient);
      transition: left 0.6s ease;
      pointer-events: none;
    }

    .service-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: var(--premium-glow);
      border-color: rgba(168, 85, 247, 0.4);
      background: rgba(255, 255, 255, 0.08);
    }

    .service-card:hover::before {
      left: 100%;
    }

    .service-header {
      display: flex;
      align-items: center;
      margin-bottom: var(--space-sm);
    }

    .service-icon {
      font-size: var(--text-4xl);
      margin-right: 0.75rem;
    }

    .service-title {
      font-size: var(--text-xl);
      font-weight: 600;
      color: var(--text-primary);
    }

    .service-list {
      list-style: none;
      color: var(--text-secondary);
      flex: 1; /* Take up remaining space */
      margin: 0;
      padding: 0;
    }

    .service-list li {
      display: flex;
      align-items: center;
      margin-bottom: var(--space-xs);
    }

    .service-list li::before {
      content: '';
      width: 0.5rem;
      height: 0.5rem;
      background: var(--accent-primary);
      border-radius: var(--radius-full);
      margin-right: 0.75rem;
      flex-shrink: 0;
    }

    .stats-grid {
      display: flex !important;
      flex-direction: row !important;
      justify-content: space-between !important;
      align-items: stretch !important;
      gap: var(--space-lg);
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: var(--radius-xl);
      padding: var(--space-lg) var(--space-xl);
      text-align: center;
      box-shadow: var(--premium-shadow);
      position: relative;
      overflow: hidden;
      width: 100%;
      margin-bottom: var(--space-xl);
    }
    
    .stats-grid > * {
      flex: 1 1 0%;
      min-width: 0;
    }

    .stats-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--shimmer-gradient);
      animation: shimmer 4s infinite;
      pointer-events: none;
    }

    .stat-number {
      font-size: var(--text-4xl);
      font-weight: 700;
      color: var(--accent-primary);
      display: block;
    }

    .stat-label {
      color: var(--text-muted);
      font-size: var(--text-sm);
    }


    .about-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      align-items: center;
      max-width: var(--max-width-text);
      margin: 0 auto;
    }

    @media (min-width: 768px) {
      .about-grid {
        max-width: var(--max-width-content);
        grid-template-columns: 1fr;
      }
    }

    .about-text {
      font-size: var(--text-lg);
      color: var(--text-secondary);
      line-height: 1.7;
      text-align: justify;
      text-justify: inter-word;
    }

    @media (max-width: 767px) {
      .about-text {
        text-align: left;
      }
    }

    .about-text p {
      margin-bottom: var(--space-md);
    }

    .tools-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-sm);
      align-items: stretch;
    }

    .tool-tag {
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      color: var(--text-primary);
      padding: var(--space-sm);
      border-radius: var(--radius-sm);
      text-align: center;
      font-weight: 500;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 48px;
    }

    .tool-tag:hover {
      background: var(--accent-primary);
      color: white;
      transform: translateY(-2px);
    }


    .contact-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-xl);
      margin-bottom: var(--space-xl);
      align-items: stretch;
      justify-content: center;
    }

    .contact-card {
      background: var(--glass-bg);
      backdrop-filter: blur(15px);
      border: 1px solid var(--glass-border);
      border-radius: var(--radius-lg);
      padding: var(--space-lg);
      text-align: center;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      text-decoration: none;
      color: inherit;
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      min-height: 140px;
    }

    .contact-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--shimmer-gradient);
      transition: left 0.6s ease;
      pointer-events: none;
    }

    .contact-card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: var(--premium-glow);
      border-color: rgba(168, 85, 247, 0.4);
      background: rgba(255, 255, 255, 0.08);
    }

    .contact-card:hover::before {
      left: 100%;
    }

    .contact-card:focus-visible {
      outline: none;
      box-shadow: var(--focus-ring), 0 10px 30px rgba(0, 0, 0, 0.3);
      transform: translateY(-4px);
    }

    .contact-card:focus:not(:focus-visible) {
      outline: none;
    }

    .contact-icon {
      font-size: var(--text-4xl);
      margin-bottom: var(--space-sm);
      display: block;
    }

    .contact-label {
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: var(--space-xs);
    }

    .contact-value {
      color: var(--accent-primary);
    }

    /* 3D Flip Card Styles */
    .perspective-1000 {
      perspective: 1000px;
    }
    
    .preserve-3d {
      transform-style: preserve-3d;
    }
    
    .backface-hidden {
      backface-visibility: hidden;
    }
    
    .rotate-y-180 {
      transform: rotateY(180deg);
    }

    /* Hyperspace Animation Styles */
    .bg-gradient-radial {
      background: radial-gradient(circle, var(--tw-gradient-stops));
    }

    /* Floating Particles Animation */
    .floating-particles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
      overflow: hidden;
    }

    .particle {
      position: absolute;
      border-radius: var(--radius-full);
      animation: float 20s infinite linear;
      opacity: 0.6;
    }

    .particle-1 {
      width: 4px;
      height: 4px;
      background: var(--accent-primary);
      top: 20%;
      left: 10%;
      animation-duration: 25s;
      animation-delay: 0s;
    }

    .particle-2 {
      width: 6px;
      height: 6px;
      background: var(--accent-secondary);
      top: 60%;
      left: 80%;
      animation-duration: 30s;
      animation-delay: -5s;
    }

    .particle-3 {
      width: 3px;
      height: 3px;
      background: var(--accent-tertiary);
      top: 80%;
      left: 20%;
      animation-duration: 35s;
      animation-delay: -10s;
    }

    .particle-4 {
      width: 5px;
      height: 5px;
      background: var(--accent-primary);
      top: 30%;
      left: 70%;
      animation-duration: 28s;
      animation-delay: -15s;
    }

    .particle-5 {
      width: 4px;
      height: 4px;
      background: var(--accent-secondary);
      top: 70%;
      left: 30%;
      animation-duration: 32s;
      animation-delay: -20s;
    }

    .particle-6 {
      width: 7px;
      height: 7px;
      background: var(--accent-tertiary);
      top: 10%;
      left: 90%;
      animation-duration: 26s;
      animation-delay: -25s;
    }

    .particle-7 {
      width: 3px;
      height: 3px;
      background: var(--accent-primary);
      top: 45%;
      left: 15%;
      animation-duration: 22s;
      animation-delay: -8s;
    }

    .particle-8 {
      width: 5px;
      height: 5px;
      background: var(--accent-secondary);
      top: 25%;
      left: 85%;
      animation-duration: 29s;
      animation-delay: -12s;
    }

    .particle-9 {
      width: 4px;
      height: 4px;
      background: var(--accent-tertiary);
      top: 65%;
